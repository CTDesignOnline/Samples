@inherits Merchello.Web.Mvc.MerchelloTemplatePage
@using Merchello.Web
@using Merchello.Web.Models.ContentEditing
@{
    Layout = null;

    // Before 1.8 Release
    //var key = new Guid(CurrentPage.product);
    //var product = Merchello.Query.Product.GetByKey(key);

    // 1.8 Release+
    var product = CurrentPage.GetPropertyValue<ProductDisplay>("product");
}

<!--
	Umbraco Content Page Id: @CurrentPage.id, 
    Merchello Product Guid: @product.Key.ToString()
-->
<!-- exampletable class is only for center alignment -->
<table class="exampletable">
    <tr>
		<td>		
		    Item 
        </td>
        <td>
            Item Value
        </td>
        <td>
            Storage       
        </td>    
	</tr>
	<tr>
		<td>		
		    Product: 
        </td>
        <td>
            @product.Name
        </td>
        <td>
            Merchello Product Catalog 
        </td>    
	</tr>
	<tr>
		<td>		
		    Price: 
        </td>
        <td>
            @product.Price.ToString("C")
        </td>
        <td>
            Merchello Product Catalog 
        </td>    
	</tr>
	<tr>
		<td>		
		    Sale Price: 
        </td>
        <td>
            @product.SalePrice.ToString("C")
        </td>
        <td>
            Merchello Product Catalog 
        </td>    
	</tr>
    <tr>
		<td>		
		    Description: 
        </td>
        <td>
            @Model.Content.GetPropertyValue("productdescription")
        </td>
        <td>
            Umbraco Content Page
        </td>
    </tr>
    <tr>
		<td>		
		    Manufacturer: 
        </td>
        <td>
            @product.Manufacturer
        </td>
        <td>
            Merchello Product Catalog
        </td>
    </tr>
    <tr>
		<td>		
		    Manufacturer Model Number: 
        </td>
        <td>
            @product.ManufacturerModelNumber
        </td>
        <td>
            Merchello Product Catalog
        </td>
    </tr>
    <tr>
		<td>		
		    Is Taxable: 
        </td>
        <td>
            @product.Taxable
        </td>
        <td>
            Merchello Product Catalog
        </td>
    </tr>
    <tr>
		<td>		
		    In Stock: 
        </td>
        <td>
            @product.Available
        </td>
        <td>
            Merchello Product Catalog
        </td>
    </tr>
</table>